{
    "family": "Judge0Task",
    "containerDefinitions": [
        {
            "name": "kadane-judge0-server",
            "image": "905418014870.dkr.ecr.us-east-2.amazonaws.com/kadane/judge0:latest",
            "cpu": 256,
            "memory": 512,
            "portMappings": [
                {
                    "containerPort": 2358,
                    "hostPort": 2358,
                    "protocol": "tcp",
                    "name": "kadane-judge0-server-2358-tcp",
                    "appProtocol": "http"
                }
            ],
            "serviceConnectConfiguration": {
                "enabled": true,
                "namespace": "KadaneProdBackendCluster",
                "services": [
                    { 
                        "portName": "kadane-judge0-server-2358-tcp",
                        "discoveryName": "judge0",
                        "clientAliases": [
                            { 
                                "port": 2358 
                            }
                        ]
                    }
                ]
            },
            "essential": true,
            "privileged": false,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "judge0-server-logs",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "judge0-server"
                }
            }
        },
        {
            "name": "kadane-judge0-worker",
            "image": "905418014870.dkr.ecr.us-east-2.amazonaws.com/kadane/judge0:latest",
            "cpu": 256,
            "memory": 512,
            "essential": false,
            "privileged": false,
            "serviceConnectConfiguration": {
                "enabled": true,
                "namespace": "KadaneProdBackendCluster"
            },
            "command": ["./scripts/workers"],
            "healthCheck": {
                "command": [ "CMD-SHELL", "curl -f http://localhost:2358/health" ],
                "interval": 5,
                "timeout": 5,
                "retries": 5,
                "startPeriod": 60
            },
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "judge0-worker-logs",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "judge0-worker"
                }
            }
        },
        {
            "name": "redis",
            "image": "905418014870.dkr.ecr.us-east-2.amazonaws.com/kadane/redis:latest",
            "cpu": 256,
            "memory": 512,
            "portMappings": [
                {
                    "containerPort": 6379,
                    "hostPort": 6379,
                    "protocol": "tcp",
                    "name": "kadane-judge0-redis-6379-tcp"
                }
            ],
            "serviceConnectConfiguration": {
                "enabled": true,
                "namespace": "KadaneProdBackendCluster",
                "services": [
                    {
                        "portName": "kadane-judge0-redis-6379-tcp",
                        "discoveryName": "redis",
                        "clientAliases": [
                            {
                                "port": 6379
                            }
                        ]
                    }
                ]
            },
            "essential": true,
            "privileged": false,
            "command": ["redis-server", "--requirepass", "${REDIS_PASSWORD}", "--appendonly", "no"],
            "environment": [
                {
                  "name": "REDIS_PASSWORD",
                  "value": "${REDIS_PASSWORD}"
                }
            ],
            "healthCheck": {
                "command": [ "CMD-SHELL", "redis-cli ping" ],
                "retries": 3,
                "timeout": 5,
                "interval": 30
            },
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "redis-logs",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "redis"
                }
            }
        }
    ],
    "executionRoleArn": "arn:aws:iam::905418014870:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "2048"
}
